{
    "name": "ember-related-files",
    "displayName": "Ember Related Files",
    "description": "",
    "version": "1.0.1",
    "publisher": "josa",
    "license": "MIT",
    "homepage": "https://github.com/josa42/vscode-ember-related-files",
    "repository": {
        "type": "git",
        "url": "https://github.com/josa42/vscode-ember-related-files.git"
    },
    "bugs": {
        "url": "https://github.com/josa42/vscode-ember-related-files/issues"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "docs/assets/icon-128x128.png",
    "galleryBanner": {
        "color": "#FFFFFF",
        "theme": "light"
    },
    "activationEvents": [
        "onCommand:extension.relatedFiles"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.relatedFiles",
                "title": "Related Files"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ember Related Files",
            "properties": {
                "emberRelatedFiles.showQuickPickForSingleOption": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show pick pick list event if only one option is available."
                }
            }
        },
        "keybindings": [
            {
                "mac": "cmd+r",
                "win": "ctrl+alt+r",
                "linux": "ctrl+alt+r",
                "key": "ctrl+alt+r",
                "command": "extension.relatedFiles"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.41",
        "@types/node": "^6.0.73",
        "mocha": "^2.3.3",
        "typescript": "^2.3.3",
        "vscode": "^1.1.0"
    },
    "dependencies": {
        "ember-find-related-files": "0.1.0"
    }
}
